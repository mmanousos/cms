<form action='/<%= @doc %>' method='post'>
  <label for='content'><h3>edit content of <%= @doc %>:</h3></label>
  <textarea name='content' id='content' rows='8' cols='80'><%= @document %></textarea>
  <p><button class='edit' type='submit'>save changes</button></p>
</form>
<a href='/'><button class='cancel' type='cancel' name='cancel'>cancel</button></a>
